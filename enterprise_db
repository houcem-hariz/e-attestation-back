CREATE SEQUENCE enterprise_enterprise_id_seq;

CREATE TABLE "enterprise" (
  enterprise_id bigint NOT NULL DEFAULT nextval('enterprise_enterprise_id_seq'),
  enterpriseName character varying(100) NOT NULL,
  enterpriseSiret character varying(14),
  hasIso27001 BOOLEAN NOT NULL,
  hasIso9001 BOOLEAN NOT NULL,
  hasIso45001 BOOLEAN NOT NULL
);

ALTER SEQUENCE enterprise_enterprise_id_seq
OWNED BY enterprise.employee_id;

